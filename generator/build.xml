<?xml version="1.0" encoding="UTF-8"?>
<project name="generator" default="setup" basedir=".">
	<property name="war.home" value="out" />
	<property name="temp" value="out" />
	<property name="web-app.name" value="default-app" />
	<property name="web-app.home" value="${temp}/${web-app.name}" />
	<property name="basedir" value="generator" />

	<target name="compile">
		<mkdir dir="classes"/>
		<javac destdir="classes/" includeAntRuntime="no">
			<src path="src"/>
			<classpath>
					<fileset dir="lib/">
							<include name="*.jar"/>
					</fileset>
			</classpath>
		</javac>
	</target>
	<target name="run" >
		<java classname="ajweb.server.Main"  >
			<arg value="${web-app.name}"/>
			<classpath>
				<fileset dir="lib">
					<include name="*.jar"/>
				</fileset>
				<pathelement location="classes/"/>
			</classpath>
		</java>
	</target>


	<target name="jar" depends="compile">
			<delete file="dist/ajweb.jar"/> 
			<jar destfile="dist/ajweb.jar" 
			update="true"
			basedir="classes" />
	</target>


	<target name="doc">
	</target>
	<target name="test" depends="compile">
			<junit haltonfailure="true" printsummary="on">
					<formatter type="plain" usefile="false"/> 
					<classpath>
							<fileset dir="lib">
									<include name="*.jar"/>
							</fileset>
							<pathelement location="classes/"/>
					</classpath>
					<test name="ajweb.AllTests"/>
			</junit>
	</target>

	<target name="app_test" depends="jar">
			<copy file="./dist/ajweb.jar"  todir="./test/app/chat/WEB-INF/lib/" overwrite="true"/>
			<java classname="ajweb.server.AppTestServer">
			<classpath>
				<fileset dir="lib">
					<include name="*.jar"/>
				</fileset>
				<pathelement location="classes/"/>
			</classpath>
		</java>
	</target>



	<target name="generate">
	</target>

</project>
