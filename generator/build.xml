<?xml version="1.0" encoding="UTF-8"?>
<project name="generator" default="setup" basedir=".">
	<property name="war.home" value="out" />
	<property name="temp" value="out" />
	<property name="web-app.name" value="default-app" />
	<property name="web-app.home" value="${temp}/${web-app.name}" />
	<property name="basedir" value="./" />
	<target name="clean">
			<delete dir="doc"/>
			<delete dir="classes"/>
			<delete dir="test/classes"/>
			<delete dir="test/temp"/>
	</target>
	<target name="compile">
			<mkdir dir="classes"/>
			<javac destdir="classes/" includeAntRuntime="no">
					<src path="src"/>
					<classpath>
							<fileset dir="lib/servlet/">
									<include name="*.jar"/>
							</fileset>
							<fileset dir="lib/compiler/">
									<include name="*.jar"/>
							</fileset>
					</classpath>
			</javac>
	</target>


	<target name="jar" depends="compile">
			<delete file="${basedir}/dist/ajweb.jar"/> 
			<jar destfile="${basedir}/dist/ajweb.jar" 
					update="true">
					<fileset dir="classes/">
							<include name="**/*.class"/>
					</fileset>
					<fileset dir="./">
							<include name="lib/**/*.jar"/>
					</fileset>
					<fileset dir="./">
							<include name="resources/**/*.template"/>
					</fileset>
					<manifest>
							<attribute name="Main-Class" value="ajweb.LauncherServer"/>
					</manifest>
			</jar>
	</target>


	<target name="doc">
			<mkdir dir="doc"/>
			<javadoc windowtitle="ajweb api javadoc" destdir="./doc">
					<sourcepath path="./src"/>
					<package name="ajweb.*"/>
			</javadoc>
	</target>
	<target name="unittest" depends="compile,compile_unittest">
			<echo message="${basedir}"/>
			<junit haltonfailure="true" printsummary="on" dir="${basedir}" fork="on">
					<sysproperty key="basedir" value="${basedir}"/>
					<formatter type="plain" usefile="false"/> 
					<classpath>
						<fileset dir="./lib/compiler/">
							<include name="*.jar"/>
						</fileset>
						<fileset dir="./lib/servlet/">
							<include name="*.jar"/>
						</fileset>
						<pathelement location="classes/"/>
						<pathelement location="test/classes/"/>
					</classpath>
					<test name="ajweb.AllTests"/>
			</junit>
	</target>
	<target name="compile_unittest" depends="compile">
			<mkdir dir="./test/classes"/>
			<javac destdir="./test/classes" includeAntRuntime="no">
					<src path="./test/unit/"/>
					<classpath>
						<fileset dir="./lib/compiler/">
							<include name="*.jar"/>
						</fileset>
						<fileset dir="./lib/servlet/">
							<include name="*.jar"/>
						</fileset>
						<pathelement location="classes/"/>
					</classpath>
			</javac>
	</target>

	<target name="run"> 
			<java classname="ajweb.server.Main" dir="${basedir}">
					<classpath>
							<fileset dir="${basedir}/lib/compiler/">
									<include name="*.jar"/>
							</fileset>
							<fileset dir="${basedir}/lib/servlet/">
									<include name="*.jar"/>
							</fileset>
							<pathelement location="${basedir}/classes/"/>
							<!--<pathelement location="./dist/ajweb.jar"/>--> 
					</classpath>
			</java>
	</target>


	
	
	<target name="app_test" depends="">
			<java classname="ajweb.server.Main" dir="${basedir}">
			<classpath>
					<fileset dir="${basedir}/lib/compiler/">
							<include name="*.jar"/>
					</fileset>
					<fileset dir="${basedir}/lib/servlet/">
							<include name="*.jar"/>
					</fileset>
					<pathelement location="${basedir}/classes/"/>
			</classpath>
		</java>
	</target>

	<target name="test_app_chat_compile" depends="jar">
			<mkdir dir="./test/app/chat/WEB-INF/classes"/>
			<javac destdir="./test/app/chat/WEB-INF/classes/" includeAntRuntime="no">
					<src path="./test/app/chat/WEB-INF/src"/>
					<classpath>
							<fileset dir="./lib">
									<include name="*.jar"/>
							</fileset>
							<pathelement location="./dist/ajweb.jar"/>
					</classpath>
			</javac>
	</target>


</project>
